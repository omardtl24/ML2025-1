# CUDA Toolkit path (update to your CUDA installation)
CUDA_HOME=/path/to/cuda

# CUDA binaries path (update if different)
CUSTOM_CUDA_PATH=/path/to/cuda/bin

# CUDA/cuDNN libraries path (update if different)
CUSTOM_CUDA_LIB_PATH=/path/to/cuda/lib64

# Optional: CUDA and cuDNN version info (for documentation)
CUDA_VERSION=<cuda_version>         # e.g. 12.5.1
CUDNN_VERSION=<cudnn_version>       # e.g. 9

# TensorFlow/CUDA logging levels
TF_CPP_MIN_LOG_LEVEL=0|1|2|3        # 0=all, 1=info, 2=warnings, 3=errors only
CUDA_LOG_LEVEL=0|1|2|3              # 0=all, 1=errors, 2=warnings, 3=info
CUDA_DEVICE_LOG_LEVEL=0|1|2|3       # 0=all, 1=errors, 2=warnings, 3=info
NVIDIA_LOG_LEVEL=ERROR|WARNING|INFO # For cuDNN (optional)

# Control which GPUs TensorFlow uses (e.g., 0,1,2 or -1 for CPU only)
# Leave empty or unset to use all available GPUs
CUDA_VISIBLE_DEVICES=0|1|0,1|-1

# (Optional) absl logging level for TensorFlow
ABSL_LOG_LEVEL=0|1|2|3
